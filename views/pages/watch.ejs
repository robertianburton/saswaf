<!DOCTYPE html>
<html lang="en">
	<head>
		<% include ../partials/header.ejs %>
		<link rel="stylesheet" type="text/css" href="/stylesheets/watch.css" />

	</head>
	<body>
		<% include ../partials/navbar.ejs %>
		<main role="main" class="container">
			<div class="d-flex justify-content-center" id="buttonBar">
				<div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
					<div class="btn-group mx-2" role="group" aria-label="Video Window Sizes">
						<button type="button" class="btn btn-primary" id="buttonVideoSizeResponsive">Responsive</button>
						<button type="button" class="btn btn-primary" id="buttonVideoSizeSource">Source Scale</button>
						<button type="button" class="btn btn-primary" id="buttonVideoSizePage">Page Scale</button>
					</div>
					<div class="btn-group mx-2" role="group" aria-label="Video Window Sizes">
						<button type="button" class="btn btn-primary" id="buttonLogConnection">Log Connection</button>
					</div>
				</div>
			</div>
			<br>
			<div class="container" id="sectionHostList">
				<div class="card text-center bg-info text-white">
				  <div class="card-header">
				    <b>Select a Host</b>
				  </div>
				</div>
				<br>
				<div class="list-group text-center" id="hostListButtons"></div>
				<br>
			</div>
			
			<div class="d-flex justify-content-center">
				<video id="videoRemoteElem" autoplay controls></video>
			</div>
			<div class="d-flex justify-content-center">
				<p>Video From Host</p>
				<div id="hostIdField"></div>
			</div>
			<div class="d-flex justify-content-center">
				<p>Your ID</p>
				<div id="userIdField"></div>
			</div>
			<div class="select">
		        <label for="audioOutput">Audio output destination: </label><select id="audioOutput"></select>
		    </div>

		</main>
		<% include ../partials/footer.ejs %>
		<script src="https://webrtc.github.io/adapter/adapter-latest.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js"></script>
		<script src="/js/watch.js"></script>
	</body>
</html>