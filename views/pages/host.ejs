<html lang="en">
	<head>
		<% include ../partials/header.ejs %>
		<link rel="stylesheet" type="text/css" href="/stylesheets/host.css" />
	</head>
	<body>
		<% include ../partials/navbar.ejs %>
		<main role="main" class="container">
			<div class="d-flex justify-content-center" id="buttonBar">
				<div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
					<div class="btn-group mx-2" role="group" aria-label="Video Window Sizes">
						<button type="button" class="btn btn-primary" id="buttonVideoSizeResponsive">Responsive</button>
						<button type="button" class="btn btn-primary" id="buttonVideoSizeSource">Source Scale</button>
						<button type="button" class="btn btn-primary" id="buttonVideoSizePage">Page Scale</button>
					</div>
					<div class="btn-group mx-2" role="group" aria-label="Resolution">
						<button type="button" class="btn btn-primary" id="480p">480p</button>
						<button type="button" class="btn btn-primary" id="720p">720p</button>
						<button type="button" class="btn btn-primary" id="900p">900p</button>
						<button type="button" class="btn btn-primary" id="1080p">1080p</button>
					</div>
					<div class="btn-group mx-2" role="group" aria-label="Start Button">
						<button type="button" class="btn btn-primary" id="buttonStart">Start</button>
					</div>
					<div class="btn-group mx-2" role="group" aria-label="Connection Button">
						<button type="button" class="btn btn-primary" id="buttonLogConnection">Log Connection</button>
					</div>
				</div>
			</div>
			<br>
			<div class="d-flex justify-content-center">
				<p>Your Host Name</p>
				<div id="userIdField"></div>
			</div>

			<div class="d-flex justify-content-center">
				<video id="videoLocalElem" autoplay controls></video>
			</div>
			<br>
			<div class="container" id="sectionFriendList">
				<div class="card text-center bg-info text-white">
				  <div class="card-header">
				    <b>Friends</b>
				  </div>
				</div>
				<br>
				<div class="list-group text-center" id="friendListItems"></div>
				<br>
			</div>
			<div class="d-flex justify-content-center">
				<p>This page only fully supports the Chrome browser.</p>
			</div>

		</main>
		<% include ../partials/footer.ejs %>
		<script src="https://webrtc.github.io/adapter/adapter-latest.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js"></script>
		<script src="/js/host.js"></script>
	</body>
</html>