<% var rootPath = '../'; %>
<!DOCTYPE html>
<html lang="en">

<head>
	<%- include(rootPath + 'partials/header.ejs') %>
	<link rel="stylesheet" type="text/css" href="/stylesheets/host.css" />
</head>

<body>
	<%- include(rootPath + 'partials/navbar.ejs') %>
	<main role="main" class="container">
		<br>
		<div class="d-flex justify-content-center">
			<video id="videoLocalElem" autoplay controls muted></video>
		</div>
		<br>
		<div class="d-flex justify-content-center" id="buttonBar">
			<div class="btn-group mx-2" role="group" aria-label="Start Button" id="buttonStartBar">
				<button type="button" class="btn btn-success" id="buttonStart">Start</button>
			</div>
			<div class="btn-group mx-2 d-none" role="group" aria-label="Copy Link Button" id="buttonCopyLinkBar">
				<button type="button" class="btn btn-secondary" id="buttonCopyLink">Copy Link</button>
			</div>
			<div class="btn-group mx-2">
				<a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="infoMenuButton"
					data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					Info
				</a>
				<div class="dropdown-menu pt-4 pl-1 text-muted" style="min-width: 700px; max-width: 800px;">
					<div class="container">
						<div id="userIdField">Your URL</div>
					</div>
					<div class="container" id="sectionFriendList">
						<div class="list-group" id="friendListItems"></div>
					</div>
					<div class="container">
						<div>This page only fully supports the desktop Chrome and Edge browsers.</div>
					</div>
					<div class="container">
						<div>Firefox, Opera, and Safari cannot share audio.</div>
					</div>
					<div class="container">
						<div>Video playback starts muted.</div>
					</div>
					<div class="container">
						<div>Sharing an Entire Screen (not a window/tab) usually gives best results.</div>
					</div>
					<div class="container">
						<div>Maximum resolution is 1600x900 (for now).</div>
					</div>
				</div>
			</div>
			<div class="btn-group mx-2">
				<a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
					data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					Player Size
				</a>
				<div class="dropdown-menu">
					<a class="dropdown-item" href="#" id="buttonVideoSizeResponsive">Responsive</a>
					<a class="dropdown-item" href="#" id="buttonVideoSizeSource">Source Size</a>
					<a class="dropdown-item" href="#" id="buttonVideoSizePage">Page Width</a>
				</div>
			</div>
			<div class="btn-group mx-2 d-none" role="group" id="debugButtonBar" aria-label="Debug Buttons">
				<button type="button" class="btn btn-secondary" id="buttonLogConnection">Log Connection</button>
			</div>
			<div class="btn-group mx-2">
				<a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownAudioMenuLink"
					data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					Audio
				</a>
				<div class="dropdown-menu dropdown-menu-dark" id="buttonAudioMenu">
					<a class="dropdown-item" href="#" id="buttonAudioOutputs"
						data-toggle="tooltip" data-placement="top"
						title="Ask the browser to give Saswaf your computer's audio output devices so you can send Saswaf audio somewhere other than your default speakers">
						Get Audio Outputs
					</a>
					<h5 class="dropdown-header" id="audioOutputDivider">Output</h5>
				</div>
			</div>
		</div>
		<br>
		<div class="d-flex justify-content-center">
		</div>
		<br>
	</main>
	<%- include(rootPath + 'partials/footer.ejs') %>
	<script src="https://webrtc.github.io/adapter/adapter-latest.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js"></script>
	<script src="/js/host.js"></script>
</body>

</html>